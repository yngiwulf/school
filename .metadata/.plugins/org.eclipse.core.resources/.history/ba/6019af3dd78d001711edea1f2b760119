
public class Chpt2_First_Assignment {
	/*
	 * CREATED BY	: Randy Sims
	 * CREATED ON	: 2017-08-30
	 * DESCRIPTION	: Demonstrate Chapter 2	 
	 */

	public static void main(String[] args) {
		int x = 10;
		int y = 21;
		
		int result = x + y;
		int nextResult = y % y;
		
		System.out.println("Result is: " + result + " Next REsult is: " + nextResult);
		
		//declare variables
		int gradeOne = 95;
		int gradeTwo = 85;
		int gradeThree = 75;
		//calculate average
		int finalGrade = (gradeOne + gradeTwo + gradeThree)/3;
		
		//create a blank line using \n
		System.out.println("\n");
		System.out.println("Student's final grade is: " + finalGrade + " percent");
	}

}
